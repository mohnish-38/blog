<div class="container">
  
  <div class="row justify-content-center">
    <div class="col-10">
    <%= render 'shared/errors', obj: @article %>
      <%= form_with(model: @article,class: "shadow p-3 mb-3 bgc rounded", local: true) do |f| %>
        <div class="form-group row">
          <%= f.label :title, class: "col-2 col-form-label  "  %>
          <div class ="col-10">
            <%= f.text_field :title,class:"form-control shadow rounded" %>
          </div>
        </div>
        <br>
        <div class="form-group row">
          <%= f.label :description, class: "col-2 col-form-label"  %>
          <div class ="col-10">
            <%= f.text_area :description,rows:6,class:"form-control shadow rounded" %>
          </div>
        </div>
        <br>
        <p class="text-center mt-1"><%= f.submit class:"btn btn-outline-light " %></p>
        
      <% end %>
    </div>
    <p class="text-center "><%= link_to "[ Return to articles ]" , articles_path,class:"text-info"%></p>
  </div>
</div>


